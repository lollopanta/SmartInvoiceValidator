# App Configuration
DEBUG=true
APP_ENCODING=UTF-8
APP_DEFAULT_LOCALE=en_US
APP_DEFAULT_TIMEZONE=UTC
APP_FULL_BASE_URL=http://localhost:8080

# Security (Change this in production!)
SECURITY_SALT=__CHANGE_ME_IN_APP_LOCAL_OR_ENV__

# Database Configuration (Docker)
MYSQL_HOST=mysql
MYSQL_DATABASE=smart_invoice_validator
MYSQL_USER=app
MYSQL_PASSWORD=secret
MYSQL_ROOT_PASSWORD=root
MYSQL_TEST_DATABASE=smart_invoice_validator_test

# Cache Configuration
CACHE_DEFAULT_URL=file://tmp/cache/?prefix=app_cake_default_&serialize=true&duration=+2 minutes
CACHE_CAKECORE_URL=file://tmp/cache/persistent?prefix=app_cake_core_&serialize=true&duration=+2 minutes
CACHE_CAKEMODEL_URL=file://tmp/cache/models?prefix=app_cake_model_&serialize=true&duration=+2 minutes

# Logging Configuration
LOG_DEBUG_URL=file://logs/?levels[]=notice&levels[]=info&levels[]=debug&file=debug
LOG_ERROR_URL=file://logs/?levels[]=warning&levels[]=error&levels[]=critical&levels[]=alert&levels[]=emergency&file=error

# Frontend Configuration (if needed separately)
VITE_API_BASE_URL=http://localhost:5173
