{
    "name": "smart-invoice-validator/app",
    "description": "Smart Invoice Validator - production-ready invoice validation API",
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=8.2",
        "cakephp/cakephp": "5.3.*",
        "cakephp/migrations": "^5.0",
        "cakephp/plugin-installer": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5 || ^12.0",
        "josegonzalez/dotenv": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "cakephp/plugin-installer": true
        },
        "platform-check": true,
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit --colors=always"
    }
}
